<!-- @format -->

<body>
  <div class="container col-md-4 m-auto">
    <form class="py-5" method="POST" action="/v1/ads/add/">
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" />
      </div>
      <div class="form-group">
        <label>Description</label>
        <textarea
          name="description"
          class="form-control"
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group">
        <label>TotalReward</label>
        <input type="number" class="form-control" name="totalRewardPoint" />
      </div>
      <div class="form-group">
        <label>Filepath</label>
        <input type="text" class="form-control" name="filePath" />
      </div>
      <div class="form-group">
        <a
          href="/v1/ads/all"
          class="btn btn-secondary rounded-0 my-2"
          type="submit"
        >
          Cancel
        </a>
        <button class="btn btn-primary rounded-0 my-2" type="submit">
          Submit
        </button>
      </div>
    </form>
  </div>
</body>
